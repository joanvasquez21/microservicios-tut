package com.moto.service.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.moto.service.entity.Moto;
import com.moto.service.services.MotoService;



mport com.usuario.service.entities.Carro;

@RestController
@RequestMapping("/moto")
class MotoController {

	@Autowired
	private MotoService motoService;
	
	@GetMapping
	public ResponseEntity<List<Moto>> listUsers(Moto user){
		List<Moto> carros = motoService.getAll(user);
		if(carros.isEmpty()) { //retorna codigo de estado no content
			return ResponseEntity.noContent().build();
		}
		return ResponseEntity.ok(carros);
	}
	@GetMapping("/{id}")
	public ResponseEntity<Moto> getUser(@PathVariable("id") int id){
		Moto moto = motoService.getMotoById(id);
		if(moto == null) {
			return ResponseEntity.notFound().build();
		}
		return ResponseEntity.ok(moto);
	}
	
	@PostMapping
	public ResponseEntity<Moto> saveCarro(@RequestBody Moto newCar){
		Moto newCarro = motoService.save(newCar);
		return ResponseEntity.ok(newCarro);
	}
	
	// para acceder a los carros de un usuario
	@GetMapping("/usuario/{usuarioId}")
	public ResponseEntity<List<Moto>> listarCarroPorUsuarioId(@PathVariable("id") int id){
		List<Moto> motos = motoService.byUsuarioId(id);
		if(motos.isEmpty()) return ResponseEntity.noContent().build();
		return ResponseEntity.ok(motos);
		
	}
}
